@model IEnumerable<VuaDuQua_QLMovie_Phan1.Models.CinemaEntities.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Movie</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="~/Content/images/@Html.DisplayFor(modelItem => item.Image)" alt="@item.Name" width="70" height="90" />
        </td>
        <td>
            @Html.ActionLink("Xem Chi Tiết", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
